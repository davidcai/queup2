{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "noEmitOnError": false,
    "rootDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "sourceRoot": "",
    "inlineSourceMap": false,
    "inlineSources": false
  },
  "files": [
    "./app/app.ts",
    "./app/pages/home/home.page.ts",
    "./app/pages/person/person.page.ts",
    "./app/pages/person/person.service.ts",
    "./app/pages/person/person.ts",
    "./typings/tsd.d.ts"
  ],
  "filesGlob": [
    "./app/**/*.ts",
    "./typings/tsd.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
